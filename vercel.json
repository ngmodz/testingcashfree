{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "CASHFREE_CLIENT_ID": "@cashfree_client_id",
    "CASHFREE_CLIENT_SECRET": "@cashfree_client_secret",
    "NODE_ENV": "production"
  }
}
